{
	"compilerOptions": {
		"lib": ["es5", "es6", "dom"],
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "CommonJS",
		"target": "ES6",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"jsx": "react"
	},
	"include": [
		"./frontend/**/*",
		"./scripts/**/*",
		"./shared/**/*",
		"./src/**/*"
	]
}